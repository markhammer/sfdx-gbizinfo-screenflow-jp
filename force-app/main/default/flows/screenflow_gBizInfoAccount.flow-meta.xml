        <name>decision_HojinInfoSize</name>
        <label>検索結果件数</label>
        <locationX>182</locationX>
        <locationY>974</locationY>
        <defaultConnector>
            <targetReference>screen_NoHojinInfos</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>0件</defaultConnectorLabel>
        <rules>
            <name>result_HasResult</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>var_NumOfHojinInfos</leftValueReference>
                <operator>GreaterThanOrEqualTo</operator>
                <rightValue>
                    <numberValue>1.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
